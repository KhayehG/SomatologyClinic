@model SomatologyClinic.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Delete Appointment</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-red-500 font-bold mb-4">Are you sure you want to delete this appointment?</h3>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-8">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">User</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.User.FirstName @Model.User.LastName</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Treatment</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Treatment.Name</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Appointment Date</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.AppointmentDate.ToString("g")</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    @if (Model.IsApproved)
                    {
                        <span class="bg-green-200 text-green-600 py-1 px-3 rounded-full text-xs">Approved</span>
                    }
                    else
                    {
                        <span class="bg-yellow-200 text-yellow-600 py-1 px-3 rounded-full text-xs">Pending</span>
                    }
                </dd>
            </div>
        </dl>
        <form asp-action="Delete" class="mt-8">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Delete</button>
            <a asp-action="Index" class="ml-4 inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Back to List</a>
        </form>
    </div>
</div>
