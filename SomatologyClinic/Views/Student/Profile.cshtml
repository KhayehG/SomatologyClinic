@model SomatologyClinic.Models.ViewModels.StudentProfileViewModel

@{
    ViewData["Title"] = "Student Profile";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Student Profile</h2>

    @if (TempData["StatusMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["StatusMessage"]</span>
        </div>
    }

    <div class="bg-white rounded-lg shadow-lg p-6">
        <form asp-action="Profile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StudentNumber" />

            <div class="mb-4">
                <label asp-for="StudentNumber" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="StudentNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" disabled />
            </div>

            <div class="mb-4">
                <label asp-for="FirstName" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="FirstName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="FirstName" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="LastName" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="LastName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="LastName" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" disabled />
            </div>

            <div class="mb-4">
                <label asp-for="PhoneNumber" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="PhoneNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DateOfBirth" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="DateOfBirth" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="DateOfBirth" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Gender" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <select asp-for="Gender" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="RegistrationDate" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="RegistrationDate" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" disabled />
            </div>

            <div class="mb-4">
                <label asp-for="IsActive" class="inline-flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="form-checkbox h-5 w-5 text-blue-600" disabled><span class="ml-2 text-gray-700">Is Active</span>
                </label>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Update Profile
                </button>
                <a asp-action="Dashboard" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Back to Dashboard
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

