@model List<Treatment>

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Select a Treatment</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var treatment in Model)
        {
            <div class="bg-white shadow-md rounded-lg p-6">
                <h3 class="text-xl font-semibold mb-2">@treatment.Name</h3>
               
                <p class="text-lg font-bold mb-4">R @treatment.Price.ToString("F2")</p>
                <form asp-action="SelectTreatment" method="post">
                    <input type="hidden" name="treatmentId" value="@treatment.Id" />
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-200">
                        Book Now
                    </button>
                </form>
            </div>
        }
    </div>
</div>
