@model SomatologyClinic.Models.Treatment

@{
    ViewData["Title"] = "Treatment Details";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Treatment Details</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-8">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Name</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Name</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Price</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Price.ToString("C")</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Duration</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Duration minutes</dd>
            </div>
        </dl>
        <div class="mt-8 flex items-center space-x-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>
            <a asp-action="Index" class="text-blue-500 hover:text-blue-800 font-bold">Back to List</a>
        </div>
    </div>
</div>
