@model IEnumerable<SomatologyClinic.Models.Booking>

@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">View Bookings</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">User</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Treatment</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Date and Time</th>
                    <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            @Html.DisplayFor(modelItem => item.Treatment.Name)
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            @Html.DisplayFor(modelItem => item.BookingDateTime)
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                            <form asp-action="ApproveReject" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <div class="flex items-center">
                                    <input type="text" name="staffNotes" placeholder="Staff notes" class="form-input mt-1 block w-full" />
                                    <button type="submit" name="approve" value="true" class="ml-2 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                                        Approve
                                    </button>
                                    <button type="submit" name="approve" value="false" class="ml-2 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                                        Reject
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
