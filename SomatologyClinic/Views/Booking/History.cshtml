@model IEnumerable<SomatologyClinic.Models.Booking>

@{
    ViewData["Title"] = "Treatment History";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Treatment History</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        @if (!Model.Any())
        {
            <p class="text-gray-600">You don't have any completed treatments yet.</p>
        }
        else
        {
            <table class="min-w-full">
                <thead>
                    <tr>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Treatment</th>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Date and Time</th>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Staff Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.Treatment.Name)
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.BookingDateTime)
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.StaffNotes)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
