@model PaymentViewModel

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-6 text-center text-gray-800">Payment for Booking</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">@Html.ValidationSummary(false)</span>
        </div>
    }

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="mb-6">
            <p class="mb-2"><strong class="text-gray-700">Treatment:</strong> <span class="text-gray-900">@Model.TreatmentName</span></p>
            <p class="mb-2"><strong class="text-gray-700">Date:</strong> <span class="text-gray-900">@Model.BookingDateTime.ToString("g")</span></p>
            <p class="mb-2"><strong class="text-gray-700">Amount:</strong> <span class="text-gray-900 font-semibold">R @Model.Amount.ToString("F2")</span></p>
        </div>

        <h3 class="text-xl font-semibold mb-4 text-gray-800">Select Payment Method</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <form asp-action="ConfirmPayment" method="post" class="w-full">
                <input type="hidden" name="bookingId" value="@Model.BookingId" />
                <input type="hidden" name="paymentMethod" value="GooglePay" />
                <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-4 rounded transition duration-200">
                    <i class="fab fa-google-pay mr-2"></i> Google Pay
                </button>
            </form>

            <form asp-action="ConfirmPayment" method="post" class="w-full">
                <input type="hidden" name="bookingId" value="@Model.BookingId" />
                <input type="hidden" name="paymentMethod" value="ApplePay" />
                <button type="submit" class="w-full bg-black hover:bg-gray-800 text-white font-bold py-3 px-4 rounded transition duration-200">
                    <i class="fab fa-apple-pay mr-2"></i> Apple Pay
                </button>
            </form>

            <form asp-action="ConfirmPayment" method="post" class="w-full">
                <input type="hidden" name="bookingId" value="@Model.BookingId" />
                <input type="hidden" name="paymentMethod" value="PayFast" />
                <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-4 rounded transition duration-200">
                    PayFast
                </button>
            </form>

            <form asp-action="ConfirmPayment" method="post" class="w-full">
                <input type="hidden" name="bookingId" value="@Model.BookingId" />
                <input type="hidden" name="paymentMethod" value="PayFlex" />
                <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded transition duration-200">
                    PayFlex (Buy Now, Pay Later)
                </button>
            </form>

            <form asp-action="ConfirmPayment" method="post" class="w-full md:col-span-2">
                <input type="hidden" name="bookingId" value="@Model.BookingId" />
                <input type="hidden" name="paymentMethod" value="Cash" />
                <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-4 rounded transition duration-200">
                    Cash (Test)
                </button>
            </form>
        </div>
    </div>

    <div class="mt-6 text-center">
        <a asp-controller="Student" asp-action="Dashboard" class="text-blue-500 hover:text-blue-600 font-semibold">
            Back to Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
