}
@model Booking

<h2>Assign Booking</h2>

<form asp-action="AssignBooking" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookingDateTime"></label>
        <input asp-for="BookingDateTime" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TherapistId">Therapist ID</label>
        <input asp-for="TherapistId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Assign Booking</button>
</form>
<div>@Html.ActionLink("Add Therapist","AddTherapist","Manager")</div>

