@model SomatologyClinic.Models.Treatment

@{
    ViewData["Title"] = "Create Treatment";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Create New Treatment</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Price" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Price" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Price" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Duration" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Duration" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Duration" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Create
                </button>
                <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
