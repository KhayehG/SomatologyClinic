@using SomatologyClinic.Models.ViewModels
@model IEnumerable<StaffActionViewModel>

@{
    ViewData["Title"] = "Staff Actions";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Staff Actions</h1>

    <div class="bg-white rounded-lg shadow-lg p-6">
        @if (!Model.Any())
        {
            <p class="text-gray-600">No staff actions recorded yet.</p>
        }
        else
        {
            <table class="min-w-full">
                <thead>
                    <tr>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Booking ID</th>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Treatment</th>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Staff</th>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Action</th>
                        <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-sm leading-4 font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.BookingId)
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.TreatmentName)
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.StaffName)
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.Action)
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                                @Html.DisplayFor(modelItem => item.ActionDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
